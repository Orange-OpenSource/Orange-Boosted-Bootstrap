{
  "standard": "WCAG2AA",
  "level": "error",
  "defaults": {
    "chromeLaunchConfig": {
        "args": [
            "--no-sandbox"
        ]
    },
    "reporters": [
      "cli",
      ["pa11y-ci-reporter-html", {"destination": ".pa11y", "includeZeroIssues": true}]
    ],
    "runners": [
      "axe",
      "htmlcs"
    ],
    "useIncognitoBrowserContext": false,
    "hideElements": "iframe, .table-responsive, :disabled + label, .is-disabled, .exclude-from-pa11y-analysis, #text-decoration + p + div a.text-decoration-none",
    "ignore": [
      "color-contrast"
    ]
  }
}
