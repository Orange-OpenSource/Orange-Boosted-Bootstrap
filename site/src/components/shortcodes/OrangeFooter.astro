---
import { getVersionedDocsPath } from '@libs/path'

interface Props {
  /**
   * Display if there is content in the title section.
   * @default 'false'
   */
  title_content?: 'true' | 'false',

  /**
   * Display follow content.
   * @default 'false'
   */
  follow?: 'true' | 'false',

  /**
   * Display nav content section.
   * @default 'false'
   */
  nav?: 'true' | 'false',

  /**
   * Display service content section.
   * @default 'false'
   */
  service?: 'true' | 'false',

  /**
   * Display the mandatory section.
   * @default 'false'
   */
  mandatory?: 'true' | 'false',

  /**
   * Display the additional social links section.
   * @default 'false'
   */
  extra_social?: 'true' | 'false',

  /**
   * Display an active link.
   * @default 'false'
   */
  show_active_link?: 'true' | 'false',

  /**
   * Id for footer and accordions inside.
   */
  id: string
}

const { title_content = 'false', follow = 'false', nav = 'false', service = 'false', mandatory = 'false', extra_social = 'false', show_active_link = 'false', id } = Astro.props
