---
interface Props {
  /**
   * Display action buttons on the card.
   * @default 'false'
   */
  action?: 'true' | 'false'
  /**
   * Display borders on the card.
   * @default 'false'
   */
  borders?: 'true' | 'false'
  /**
   * Display share and favorites buttons on the card.
   * @default 'false'
   */
  buttons?: 'true' | 'false'
  /**
   * Display caption on the card.
   * @default 'false'
   */
  caption?: 'true' | 'false'
  /**
   * Display metadata on the card.
   * @default 'false'
   */
  metadata?: 'true' | 'false'
  /**
   * Display padding or not on the card.
   * @default 'false'
   */
  open?: 'true' | 'false'
  /**
   * Display the arabic version of the card.
   * @default 'false'
   */
  rtl?: 'true' | 'false'
}

const {
  action = 'false',
  borders = 'false',
  buttons = 'false',
  caption = 'false',
  metadata = 'false',
  open = 'false',
  rtl = 'false'
} = Astro.props
---

<div class:list={['card', { 'border-0': borders === 'false' }]}>
  <svg
    class="bd-placeholder-img card-img-top"
    width="100%"
    height="169"
    xmlns="http://www.w3.org/2000/svg"
    role="img"
    aria-label={rtl === 'true' ? 'العنصر النائب: شرح الصورة' : 'Placeholder: Image caption'}
    preserveAspectRatio="xMidYMid slice"
  >
    <rect width="100%" height="100%" fill="var(--bs-secondary-bg)"></rect>
    <svg
      x="30%"
      y="30%"
      width="40%"
      height="40%"
      viewBox="0 0 24 24"
      fill="var(--bs-tertiary-color)"
      aria-hidden="true"
    >
      <path
        d="M20.4 5.4a1.8 1.8 0 0 0-1.8-1.8h-15v15a1.8 1.8 0 0 0 1.8 1.8h15v-15ZM4.8 4.8h13.5a.9.9 0 0 1 .9.9V15l-4.61-5.237c-.167-.217-.436-.217-.602 0l-3.428 3.983-1.894-2.657c-.166-.217-.435-.217-.6 0L5.28 14.21c-.281-.211-.47-.444-.48-.926V4.8Zm4.8 3.25a1.5 1.5 0 1 1-3 .1 1.5 1.5 0 0 1 3-.1Z"
      ></path>
    </svg>
  </svg>
  <div class:list={['card-body', { 'px-0': open === 'true' }]}>
    <h3 class:list={['card-title', { 'mb-3': metadata === 'true' && !(caption === 'true') }]}>
      {rtl === 'true' ? 'عنوان' : 'Title'}
    </h3>
    {
      caption === 'true' && (
        <p
          class:list={[
            'card-text',
            'fw-bold',
            { 'mb-4': metadata === 'true' || buttons === 'true' || action === 'true' },
            { 'mb-2': !(metadata === 'true' || buttons === 'true' || action === 'true') }
          ]}
        >
          {rtl === 'true' ? 'شرح' : 'Caption'}
        </p>
      )
    }
    {
      metadata === 'true' && (
        <p class="card-text fw-bold text-body-secondary">{rtl === 'true' ? 'البيانات الوصفية' : 'Meta data'}</p>
      )
    }
    {
      buttons === 'true' && (
        <ul class="nav flex-row gap-3 lh-1">
          <li>
            <button class="btn btn-icon btn-link p-0 border-0">
              <svg xmlns="http://www.w3.org/2000/svg" width="1.25rem" height="1.25rem" aria-hidden="true">
                <use xlink:href="#heart" />
              </svg>
              <span class="visually-hidden">{rtl === 'true' ? 'مفضل' : 'Favorite'}</span>
            </button>
          </li>
          <li>
            <button class="btn btn-icon btn-link p-0 border-0">
              <svg xmlns="http://www.w3.org/2000/svg" width="1.25rem" height="1.25rem" aria-hidden="true">
                <use xlink:href="#share" />
              </svg>
              <span class="visually-hidden">{rtl === 'true' ? 'يشارك' : 'Share'}</span>
            </button>
          </li>
        </ul>
      )
    }
    {
      action === 'true' && (
        <a
          href="#"
          class="btn btn-outline-secondary"
          aria-label={rtl === 'true' ? 'وصف الارتباط' : 'Link description'}
          title={rtl === 'true' ? 'وصف الارتباط' : 'Link description'}
        >
          {rtl === 'true' ? 'وصلة' : 'Link'}
        </a>
      )
    }
  </div>
</div>
