---
interface Props {
  active?: boolean
  class?: string
  href: string
  rel?: HTMLAnchorElement['rel']
  target?: HTMLAnchorElement['target']
  track?: boolean
}

const { active, class: className, track, ...props } = Astro.props

const content = await Astro.slots.render('default')
---

<li class="nav-item">
  <a aria-current={active ? true : undefined} class:list={['nav-link', className, { active }]} {...props}>
    <slot />
  </a>
</li>
