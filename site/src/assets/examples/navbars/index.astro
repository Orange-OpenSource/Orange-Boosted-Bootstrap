---
import OrangeSupra from "@components/shortcodes/OrangeSupra.astro"
import OrangeGlobalHeaders from "@components/shortcodes/OrangeGlobalHeaders.astro"

export const title = 'Navbars'
export const aliases = [
  'examples/navbars',
  'docs/examples/navbars',
]
---

<main>
  <h1 class="visually-hidden">Navbars Boosted example</h1>
  <header data-bs-theme="dark">
    <OrangeSupra aria_label="Supra navigation - Left navbar only example" />
  </header>

  <div class="b-example-divider"></div>

  <header data-bs-theme="dark">
    <OrangeSupra mode="languages" aria_label="Supra navigation - Both navbars with languages example" />
  </header>

  <div class="b-example-divider"></div>
  <header data-bs-theme="dark">
    <OrangeSupra mode="actions" aria_label="Supra navigation - Both navbars with actions example" />
  </header>

  <div class="b-example-divider"></div>
  <header class="header-minimized" data-bs-theme="dark">
    <OrangeGlobalHeaders id="global-header-0" mode="actions" aria_label="Global navigation - Minimized without title example" />
  </header>

  <div class="b-example-divider"></div>
  <header data-bs-theme="dark">
    <OrangeGlobalHeaders id="global-header-1" mode="actions" aria_label="Global navigation - No title example" />
  </header>

  <div class="b-example-divider"></div>
  <header data-bs-theme="dark">
    <OrangeGlobalHeaders id="global-header-2" mode="search" aria_label="Global navigation - No title with nav-under example" />
  </header>

  <div class="b-example-divider"></div>
  <header data-bs-theme="dark">
    <OrangeGlobalHeaders id="global-header-3" mode="actions" title=true aria_label="Global navigation - With title example" />
  </header>

  <div class="b-example-divider"></div>
  <header data-bs-theme="dark">
    <OrangeGlobalHeaders id="global-header-3-1" mode="actions" title=true labels=true navigation=true aria_label="Global navigation - With title and nav-under example" />
  </header>

  <div class="b-example-divider"></div>
  <header data-bs-theme="dark">
    <OrangeGlobalHeaders id="global-header-4" mode="actions" title=true title_2=true labels=true aria_label="Global navigation - With two lined title example" />
  </header>

  <div class="b-example-divider"></div>
  <header data-bs-theme="dark">
    <OrangeGlobalHeaders id="global-header-4-1" mode="actions" title=true title_2=true labels=true navigation=true aria_label="Global navigation - With two lined title and nav-under example" />
  </header>

  <div class="b-example-divider"></div>
  <!-- Should not have buy icon -->
  <header data-bs-theme="dark">
    <OrangeGlobalHeaders id="global-header-5" mode="actions" responsive_logo=true labels_end=true  aria_label="Global navigation - With custom logo example" />
  </header>

  <div class="b-example-divider"></div>
  <!-- Should not have buy icon -->
  <header data-bs-theme="dark">
    <OrangeGlobalHeaders id="global-header-5-1" mode="actions" responsive_logo=true navigation=true  aria_label="Global navigation - With custom logo and nav-under example" />
  </header>

  <div class="b-example-divider"></div>
</main>
